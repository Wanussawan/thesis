<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".mainapp.indexActivity">



    <Button
        android:id="@+id/givedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/capsuleindex"
        android:layout_marginTop="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="เก็บข้อมูล"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"

        />

    <Button
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/givedata"
        android:background="@drawable/capsuleindex"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
        android:textAlignment="center"
        android:text="เช็คสถานะ"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        />


    <Button
        android:id="@+id/detail"
        android:layout_below="@id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/capsuleindex"
        android:text="รายละเอียดบ้านเรือน"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/checktoday"
        android:layout_below="@id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/capsuleindex"
        android:text="เก็บแล้วในวันนี้"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        />
