<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rana.adarsh.imagetotext.mainapp.Checktoday"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linear"
        >
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Swine"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/etswine" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <Button
                android:gravity="center"
                android:text="Search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/btnfetch" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nametabel"
        android:layout_margin="0dp"
        android:layout_below="@+id/linear"
        >

        <TableRow
            android:background="@color/white" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="หมู่"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="บ้านเลขที่"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="10sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:text="ชิ่อเจ้าบ้าน"
                />

        </TableRow>
    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nametabel">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewalready">
        </ListView>
    </LinearLayout>


</RelativeLayout>